<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/samples_navigation_graph"
    app:startDestination="@id/sampleListFragment">

    <fragment
        android:id="@+id/sampleListFragment"
        android:name="com.example.snappicker.SampleListFragment"
        android:label="SampleListFragment" >
        <action
            android:id="@+id/action_sampleListFragment_to_basicNumberPickerSample"
            app:destination="@id/basicNumberPickerSampleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_sampleListFragment_to_basicNumberPickerComposeSample"
            app:destination="@id/basicNumberPickerComposeSample"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/basicNumberPickerSampleFragment"
        android:name="com.example.snappicker.basicpicker.BasicNumberPickerSample"
        android:label="BasicNumberPickerSampleFragment" />
    <fragment
        android:id="@+id/basicNumberPickerComposeSample"
        android:name="com.example.snappicker.basicpicker.BasicNumberPickerComposeSample"
        android:label="BasicNumberPickerComposeSample" />
</navigation>
